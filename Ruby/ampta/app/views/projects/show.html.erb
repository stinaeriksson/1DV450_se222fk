<h1><%= @project.name %></h1> 

<p><%= @project.description %></p>

<p>Startdatum: <%= @project.start_date.strftime("%d/%m/%y") %></p>

<p>Slutdatum: <%= @project.end_date.strftime("%d/%m/%y") %></p>

<p>Medlemmar i projektet: </p>
<% @users_in_project.each do |user| %>
<ul>
	<li>
		<%= link_to user.first_name, user_path(user)%>
	</li>
</ul>	

		
		
<% end %>

<p> Tickets: </p>
<% if @tickets_for_project.empty? %>
  <p> Projektet har inga tickets </p>
	
<% else %>

	<% @tickets_for_project.each do |ticket| %>
		<ul>
			<li>
				<%= link_to ticket.name, ticket_path(ticket) %>
			</li>
		</ul>

	
	<% end %>
	<% end %>

	<%= link_to 'Lägg till ny ticket!', :controller => "tickets", :action => "new", :id => @project %>

	<%= link_to 'Redigera', edit_project_path(@project) %>

	<%= link_to 'ta bort', project_path,:method => :delete , :confirm => 'Är du säker?' %>

	<% if flash[:notice] %>
		<div class="notice"><%= flash[:notice] %></div>
	<% end %>